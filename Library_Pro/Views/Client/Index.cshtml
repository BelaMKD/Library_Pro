@model IEnumerable<Core.Client>
@{
    ViewData["Title"] = "Index";
    var i = 1;
}

<h1>List Of Clients</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var client in Model)
            {
                <tr>

                    <th scope="row">@i</th>
                    <td>@client.Name</td>
                    <td>@client.Phone</td>
                    <td>@client.Address</td>
                    <td>@client.City</td>
                    <td>
                        <a class="btn btn-primary" asp-route-clientId="@client.Id" asp-controller="Client" asp-action="Edit">Edit</a>
                        <a class="btn btn-danger" asp-route-clientId="@client.Id" asp-controller="Client" asp-action="Delete">Delete</a>
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="5">Nothing To Display</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" asp-controller="Client" asp-action="Create">Create Client</a>

@if (TempData.Keys.Contains("Message"))
{
    <div style="margin-top:5px" class="alert alert-info">@TempData["Message"]</div>
}

