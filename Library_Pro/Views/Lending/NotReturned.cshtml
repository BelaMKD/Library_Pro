@model IEnumerable<Core.Lending>
@{
    ViewData["Title"] = "NotReturned";
    var i = 1;
}

<h1>NotReturned</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Client Name</th>
            <th scope="col">Book Title</th>
            <th scope="col">Lending Date</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>

                    <th scope="row">@i</th>
                    <td>@item.Client.Name</td>
                    <td>@item.Book.Title</td>
                    <td>@item.DatumZajmuvanje</td>
                    <td>
                        <a class="btn btn-primary" asp-route-lendingId="@item.Id" asp-controller="Lending" asp-action="Edit">Edit</a>
                        <a class="btn btn-danger" asp-route-lendingId="@item.Id" asp-controller="Lending" asp-action="Delete">Delete</a>
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="5">Nothing To Display</td>
            </tr>
        }
    </tbody>
</table>

